<%= render partial: "shared/flash_messages", flash: flash %>

<div class="row">
  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">

    <div class="panel panel-default">
      <div class="panel-heading">
        Registered users
      </div><!-- .panel-heading -->
      <table class="table table-striped">
      <thead>
            <tr>
              <th>Username</th>
              <th>Role</th>
            </tr>
          </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.role %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- .panel .panel-default -->

  </div><!-- .col-lg-3 .col-md-3 .col-sm-6 .col-xs-12 -->

  <div class="col-lg-9 col-md-9 col-sm-6 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Create new user
      </div><!-- .panel-heading -->
      <div class="panel-body">
        
      <%= simple_form_for @new_user do |f| %>
        <%= f.input :username %>
        <%= f.input :role, collection: ["teacher", "student"], alow_blank: false %>
        <%= f.button :submit, class: "btn btn-success pull-right" %>
      <% end %>

      </div>
    </div><!-- .panel .panel-default -->
  </div><!-- .col-lg-9 .col-md-9 .col-sm-6 .col-xs-12 -->
</div><!-- .row -->
