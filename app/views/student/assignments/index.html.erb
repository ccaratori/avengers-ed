<%= render partial: "shared/flash_messages", flash: flash %>

<div class="panel panel-default">
  <div class="panel-heading">
    Current homeworks
  </div>

  <% if @current_assignments.empty? %>
    <div class="panel-body">
      <h4 class="empty-state">Ops, you don't have any assigned homeworks yet. Go ask your teacher for some work :)</h4>
    </div>
  <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Homework</th>
          <th>Due date</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @current_assignments.each do |assignment| %>
          <tr>
            <td><%= assignment.homework.title %></td>
            <td><%= assignment.homework.due_at %></td>
            <td>
              <%= link_to "submit answer", new_student_assignment_answer_path(assignment) %>
              <% if assignment.answers_count.zero? %>
                <span class="label label-warning">Please answer me</span>
              <% else %>
                <span class="label label-success">Yay! Already submited</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<% unless @past_assignments.empty? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      Past homeworks
    </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Homework</th>
            <th>Due date</th>
          </tr>
        </thead>
        <tbody>
          <% @past_assignments.each do |assignment| %>
            <tr>
              <td><%= assignment.homework.title %></td>
              <td>
                <%= assignment.homework.due_at %>
                <% if assignment.answers_count.zero? %>
                  <span class="label label-danger">Sorry, you missed this one</span>
                <% else %>
                  <span class="label label-success">Be cool, you submited this one</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
<% end %>