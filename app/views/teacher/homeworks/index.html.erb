<div class="panel panel-default">
  <div class="panel-heading">
    Current homeworks <span class="pull-right"><%= link_to "create new homework", new_teacher_homework_path %></span>
  </div>

  <% if @current_homeworks.empty? %>
    <div class="panel-body">
      <h4 class="empty-state">Uow, you don't have any homeworks to assign to your students. Why don't you <%= link_to "give it a try?", new_teacher_homework_path %></h4>
    </div>
  <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Homework</th>
          <th>Due date</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @current_homeworks.each do |homework| %>
          <tr>
            <td><%= homework.title %></td>
            <td><%= homework.due_at %></td>
            <td><%= link_to "view", teacher_homework_path(homework) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<% unless @past_homeworks.empty? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      Past homeworks
    </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Homework</th>
            <th>Due date</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @past_homeworks.each do |homework| %>
            <tr>
              <td><%= homework.title %></td>
              <td><%= homework.due_at %></td>
              <td><%= link_to "view", teacher_homework_path(homework) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
<% end %>